@using System.Security.Claims;



<section id="herot" class="d-flex align-items-center justify-content-center">
    <div class="container" data-aos="fade-up">
        <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="150">
            <div class="col-xl-6 col-lg-8">
                <h1>
                    Welcome
                    <span>Admin</span> 
                </h1>
                <h2>
                    Dashboard page
                </h2>
            </div>
        </div>
    </div>
</section><!-- End Hero -->

<main id="main">

    <div class="container mt-5">
        <div class="section-title">
            <h2>Dashboard</h2>
            <h1>Number of all information</h1>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div class="text-center">
                            <i class="fas fa-users fa-3x"></i>
                            <h5 class="card-title">Admin</h5>
                        </div>
                        <div>
                            <h3 class="card-text mt-5">  <span data-plugin="counterup">@ViewBag.Admin</span></h3>
                            <a class="btn btn-dark mt-3" asp-action="Admin" asp-controller="Users">Button</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div class="text-center">
                            <i class="fas fa-user fa-3x"></i>
                            <h5 class="card-title">Users</h5>
                        </div>
                        <div>
                            <h3 class="card-text mt-5">  <span data-plugin="counterup">@ViewBag.Users</span></h3>
                            <a class="btn btn-dark mt-3" asp-action="Index" asp-controller="Users">Button</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div class="text-center">
                            <i class="fas fa-car fa-3x"></i>
                            <h5 class="card-title">Cars</h5>
                        </div>
                        <div>
                            <h3 class="card-text mt-5">  <span data-plugin="counterup">@ViewBag.Cars</span></h3>
                            <a class="btn btn-dark mt-3" asp-action="Index" asp-controller="Cars">Button</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div class="text-center">
                            <i class="fas fa-clipboard-list fa-3x"></i>
                            <h5 class="card-title">Requests</h5>
                        </div>
                        <div>
                            <h3 class="card-text mt-5">  <span data-plugin="counterup">@ViewBag.Book</span></h3>
                            <a class="btn btn-dark mt-3" asp-action="Index" asp-controller="Books">Button</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main><!-- End #main -->

