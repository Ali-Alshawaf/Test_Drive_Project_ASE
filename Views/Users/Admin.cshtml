@model IEnumerable<Test_Drive.Models.Users>

@{
    ViewData["Title"] = "Index";
}

<style>
    .con {
        margin-left: 50px;
        margin-right: 50px;
    }

    .card {
        height: 100%;
        display: flex;
        flex-direction: column;
    }



        .card .card-body {
            flex: 0;
        }

    .services .row {
        margin-left: -15px;
        margin-right: -15px;
    }

    .services .col-lg-3,
    .services .col-md-6 {
        padding-left: 15px;
        padding-right: 15px;
    }

    .services .card {
        margin-bottom: 30px;
    }

    .button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        border: none;
        cursor: pointer;
        font-size: 16px;
    }

        .button:hover {
            background-color: #45a049;
        }

    span {
        color: #ffc451;
    }

    .services {
        /* fallback for old browsers */
        background: #000000;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to bottom right, #000000, #000000);
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to bottom right, #000000, #000000);
    }

    .card-body {
        background-color: #1F2021;
        color: #ffffff;
        box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); /* Add shadow effect */
    }
</style>



<section id="Cars" class="services">
    <div class="con" data-aos="fade-up" style="margin-top: 60px;">
        <div class="section-title">
            <h1><span>Admin</span></h1>
        </div>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table centered-table custom-table">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                    
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section><!-- End Services Section -->